<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlcAgeLab.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Are you Legal?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Enter your Birthdate Below" FontSize="Title" Padding="30,10,30,10"/>
        <DatePicker x:Name="Inp_date" MinimumDate="01/01/1950" MaximumDate="12/31/2021"/>
        <Label Text="Age: " x:Name="Lbl_age"/>
        <Label Text="Status" x:Name="Lbl_status"/>
        <Button x:Name="Btn_date" Text="Check Age" Clicked="Btn_Clicked"/>
        
    </StackLayout>

</ContentPage>
